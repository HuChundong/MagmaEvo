<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>items</key>
	<array>
		<dict>
				<key>cell</key>                     <string>PSLinkCell</string>
				<key>cellClass</key>                <string>MEVOColorPicker</string>
				<key>defaults</key>                 <string>com.noisyflake.magmaevo</string>
				<key>key</key>                      <string>togglesContainerBackground</string>
				<key>label</key>                    <string>Container Background</string>
				<key>alpha</key>                    <true/>
		</dict>

		<dict>
				<key>cell</key>                     <string>PSGroupCell</string>
		</dict>

		<dict>
				<key>cell</key>                     <string>PSButtonCell</string>
				<key>action</key>                   <string>switchState</string>
				<key>cellClass</key>                <string>MEVOButton</string>
				<key>label</key>                    <string>Switch to Disabled State</string>
				<key>key</key>                      <string>switchState</string>
				<key>textAlignment</key>            <string>center</string>
		</dict>

		<dict>
				<key>cell</key>                     <string>PSGroupCell</string>
				<key>label</key>                    <string>Enabled State</string>
				<key>key</key>  	                  <string>state</string>
		</dict>
		<dict>
			<key>cell</key>                          <string>PSSegmentCell</string>
			<key>cellClass</key>                     <string>MEVOSegment</string>
			<key>default</key>                       <string>regular</string>
			<key>defaults</key>                      <string>com.noisyflake.magmaevo</string>
			<key>key</key>                           <string>togglesOverlayMode</string>
			<key>validTitles</key>
				<array>
					<string>Regular</string>
					<string>Remove Overlay</string>
					<string>Color Overlay</string>
				</array>
			<key>validValues</key>
				<array>
					<string>regular</string>
					<string>removeOverlay</string>
					<string>colorOverlay</string>
				</array>
		</dict>
		<dict>
				<key>cell</key>                     <string>PSLinkCell</string>
				<key>cellClass</key>                <string>MEVOGlobalColorPicker</string>
				<key>defaults</key>                 <string>com.noisyflake.magmaevo</string>
				<key>label</key>                    <string>Global Color</string>
				<key>key</key>                      <string>togglesGlobalColor</string>
		</dict>

	</array>
	<key>title</key>                             <string>Launchers &amp; Toggles</string>
</dict>
</plist>
